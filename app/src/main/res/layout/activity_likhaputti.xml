<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backact"
    tools:context="com.papanews.Aboutus_terms">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:id="@+id/aboutus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:visibility="gone">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="@font/times_new_roman"
                        android:id="@+id/th1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="PAPANEWS"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/lstextcolor"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/hj"
                        android:fontFamily="@string/font_style_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/th1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:text="About us"
                        android:textColor="@color/lstextcolor"
                        android:textSize="13dp" />

                    <View
                        android:layout_marginTop="8dp"
                        android:id="@+id/view165"
                        android:layout_below="@+id/hj"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="#cfcfcf" />

                    <TextView
                        android:fontFamily="@string/font_style_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view165"
                        android:layout_marginTop="10dp"
                        android:text="@string/adusc"
                        android:textColor="@color/lstextcolor"
                        android:textSize="18dp" />

                </RelativeLayout>

            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tandc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tac1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="PAPANEWS"
                        android:textAlignment="center"
                        android:textColor="@color/lstextcolor"
                        android:fontFamily="@font/times_new_roman"
                        android:textStyle="bold"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/ttj"
                        android:fontFamily="@string/font_style_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tac1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:text="Terms and condition"
                        android:textColor="@color/lstextcolor"
                        android:textSize="13dp" />

                    <View
                        android:layout_marginTop="8dp"
                        android:id="@+id/view1"
                        android:layout_below="@+id/ttj"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="#cfcfcf" />

                    <TextView
                        android:fontFamily="@string/font_style_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view1"
                        android:layout_marginTop="10dp"
                        android:text="@string/termsandcondition"
                        android:textColor="@color/lstextcolor"
                        android:textSize="18dp" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/noin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/loading"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:src="@drawable/loading" />

                    <TextView
                        android:id="@+id/noit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/loading"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="No Internet Connection"
                        android:textAlignment="center"
                        android:textColor="@color/lstextcolor"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/noit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noit1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Your Connection appears to be offline"
                        android:textAlignment="center"
                        android:textColor="@color/lstextcolor"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/noit3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noit2"
                        android:layout_centerHorizontal="true"
                        android:text="Try to refresh the page"
                        android:textAlignment="center"
                        android:textColor="@color/lstextcolor"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/noireferesh"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noit3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/buttonstyle"
                        android:text="Retry"
                        android:textColor="@color/white" />


                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/langu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/languimg"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/multilang"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/langut1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/languimg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@string/font_style_main"
                    android:text="Select your language"
                    android:textAlignment="center"
                    android:textColor="@color/lstextcolor"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/langut2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/langut1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@string/font_style_main"
                    android:text="Help us to customize your app"
                    android:textAlignment="center"
                    android:textColor="@color/lstextcolor"
                    android:textSize="18dp" />
                <!--                    <TextView-->
                <!--                        android:id="@+id/langut3"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_centerHorizontal="true"-->
                <!--                        android:textAlignment="center"-->
                <!--                        android:layout_below="@+id/langut2"-->
                <!--                        android:text="Try to refresh the page"-->
                <!--                        android:textSize="18dp"-->
                <!--                        android:textColor="@color/lstextcolor"/>-->
                <LinearLayout
                    android:id="@+id/langul3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/langut2"
                    android:layout_marginTop="10dp"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/langub1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"

                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!--                            <ImageView-->
                            <!--                                android:id="@+id/i1"-->
                            <!--                                android:layout_width="50dp"-->
                            <!--                                android:layout_height="50dp"-->
                            <!--                                android:layout_centerVertical="true"-->
                            <!--                                android:layout_marginLeft="10dp"-->
                            <!--                                android:src="@drawable/handshake" />-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@string/font_style_main"
                                android:text="English"
                                android:textColor="@color/lstextcolor"
                                android:textSize="18dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/langub2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!--                            <ImageView-->
                            <!--                                android:id="@+id/i2"-->
                            <!--                                android:layout_width="50dp"-->
                            <!--                                android:layout_height="50dp"-->
                            <!--                                android:layout_centerVertical="true"-->
                            <!--                                android:layout_marginLeft="10dp"-->
                            <!--                                android:src="@drawable/startup" />-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_centerInParent="true"
                                android:fontFamily="@string/font_style_main"
                                android:text="हिंदी"
                                android:textColor="@color/lstextcolor"
                                android:textSize="18dp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <Button
                    android:fontFamily="@string/font_style_main"
                    android:id="@+id/langureferesh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/langul3"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/roundgray_new"
                    android:backgroundTint="#252525"
                    android:text="Proceed"
                    android:textColor="@color/white" />



            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>